<h2>Books</h2>

<!--投稿本一覧表示-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿フォーム-->
<%= render 'new_form', book: @book %>